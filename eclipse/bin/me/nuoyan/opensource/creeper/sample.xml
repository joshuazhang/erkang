<?xml version="1.0" encoding="UTF-8"?>
<schedule type="list">
	<entry>http://beijing.lashou.com/cate/meishi</entry>
	<!-- 定位下一页 -->
	<nextpage>
		<prefix>http://beijing.lashou.com</prefix>
		<filter>
			<hasattribute>
				<attr>class</attr>
				<value>pagedown</value>
			</hasattribute>
		</filter>
	</nextpage>
	<!-- <processlogfile>/Users/joshuazhang/Documents/work/creeper/tuan/lashou-process.log</processlogfile> -->
	<!-- 记录抓取到哪页的日志，以便重启程序后从断点处开始抓取 -->
	<processlogfile>/home/dxadmin/tuan800/lashou-process.log</processlogfile>
	<filter>
		<hasattribute>
			<attr>class</attr>
			<value>com-but</value>
		</hasattribute>
	</filter>
	<pick type="attr">
		<field>href</field>
	</pick>
	<schedule type="detail" class="com.chujian.creeper.lashou.Lashou">
		<catch action="field" field="merchantName"><!-- 抓取是会替换掉所有的标签，剩下的字符就认为是属性值 -->
			<filter>
				<tagname>h3</tagname>
			</filter>
			<pick type="text"/>
		</catch>
		<catch action="download">
			<folder>merchantName</folder><!-- 对应上面的属性，上面的merchantName必须在download之前取到，否则这里就取不到了 -->
			<!-- <saveDir>/Users/joshuazhang/Documents/work/creeper/tuan/lashou/</saveDir>一定以斜杠结尾 -->
			<saveDir>/home/dxadmin/tuan800/lashou/</saveDir>
			<filter>
				<and>
				<hasparent>
					<and>
						<tagname>p</tagname>
						<hasattribute>
							<attr>class</attr>
							<value>tc</value>
						</hasattribute>
					</and>
				</hasparent>
				<tagname>img</tagname>
				</and>
			</filter>
			<pick type="attr">
				<field>src</field>
			</pick>
		</catch>
	</schedule>
</schedule>
