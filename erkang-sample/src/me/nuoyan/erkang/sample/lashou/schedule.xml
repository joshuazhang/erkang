<?xml version="1.0" encoding="UTF-8"?>
<schedule type="list">
	<sleeptime>1000</sleeptime>
	<entry>http://beijing.lashou.com/cate/meishi</entry>
	<nextpage>
		<prefix>http://beijing.lashou.com</prefix>
		<filter>
			<hasattribute>
				<attr>class</attr>
				<value>pagedown</value>
			</hasattribute>
		</filter>
	</nextpage>
	<!-- <processlogfile>/Users/joshuazhang/Documents/work/creeper/tuan/lashou-process.log</processlogfile> -->
	<processlogfile>/home/dxadmin/tuan800/lashou-process.log</processlogfile>
	<filter>
		<hasattribute>
			<attr>class</attr>
			<value>com-but</value>
		</hasattribute>
	</filter>
	<pick type="attr">
		<field>href</field>
	</pick>
	<schedule type="detail" class="com.search.tuan800.lashou.Lashou">
		<catch action="field" field="merchantName">
			<filter>
				<tagname>h3</tagname>
			</filter>
			<pick type="text"/>
		</catch>
		<catch action="download">
			<folder>merchantName</folder>
			<!-- <saveDir>/Users/joshuazhang/Documents/work/creeper/tuan/lashou/</saveDir> -->
			<saveDir>/home/dxadmin/tuan800/lashou/</saveDir>
			<filter>
				<or>
					<and>
						<hasparent>
							<and>
								<tagname>p</tagname>
								<hasattribute>
									<attr>class</attr>
									<value>tc</value>
								</hasattribute>
							</and>
						</hasparent>
						<tagname>img</tagname>
					</and>
					
					<and>
						<hasparent recursive="true">
							<tagname>p</tagname>
						</hasparent>
						<tagname>img</tagname>
						<hasattribute>
							<attr>title</attr>
						</hasattribute>
					</and>
				</or>
			</filter>
			<pick type="attr">
				<field>src</field>
			</pick>
		</catch>
	</schedule>
</schedule>
